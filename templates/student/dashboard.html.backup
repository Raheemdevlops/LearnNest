{% extends "base.html" %}

{% block title %}Student Dashboard - LearnNest Enhanced{% endblock %}

{% block content %}
<div class="dashboard-container">
    <!-- Header Section -->
    <div class="dashboard-header">
        <div class="welcome-section">
            <div class="welcome-content">
                <h1>Student Dashboard</h1>
                <p class="welcome-message">Welcome back, <strong>{{ current_user.full_name }}</strong>! Ready to continue your learning journey?</p>
                <div class="date-badge">
                    <span id="current-date"></span>
                </div>
            </div>
            <div class="user-avatar">
                <div class="avatar-container">
                    <span>üë®‚Äçüéì</span>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Stats Overview -->
    <div class="stats-grid">
        <div class="stat-card stat-primary">
            <div class="stat-icon">
                <span>üìö</span>
            </div>
            <div class="stat-content">
                <span class="stat-number">{{ enrollments|length }}</span>
                <div class="stat-label">Enrolled Courses</div>
            </div>
        </div>
        <div class="stat-card stat-success">
            <div class="stat-icon">
                <span>‚úÖ</span>
            </div>
            <div class="stat-content">
                <span class="stat-number">{{ enrollments|selectattr('status', 'equalto', 'approved')|list|length }}</span>
                <div class="stat-label">Active Courses</div>
            </div>
        </div>
        <div class="stat-card stat-warning">
            <div class="stat-icon">
                <span>‚è≥</span>
            </div>
            <div class="stat-content">
                <span class="stat-number">{{ enrollments|selectattr('status', 'equalto', 'pending')|list|length }}</span>
                <div class="stat-label">Pending Approval</div>
            </div>
        </div>
        <div class="stat-card stat-info">
            <div class="stat-icon">
                <span>üéì</span>
            </div>
            <div class="stat-content">
                <span class="stat-number">{{ available_courses|length }}</span>
                <div class="stat-label">Available Courses</div>
            </div>
        </div>
    </div>
    
    <!-- Forum Navigation -->
    <a href="{{ url_for('messaging_hub') }}" style="display: flex; align-items: center; gap: 1.5rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 2rem; border-radius: 20px; text-decoration: none; margin: 2rem 0; box-shadow: 0 12px 40px rgba(102, 126, 234, 0.4); transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1); border: none;"
       onmouseover="this.style.transform='translateY(-6px) scale(1.01)'; this.style.boxShadow='0 20px 60px rgba(102, 126, 234, 0.5)'" 
       onmouseout="this.style.transform='translateY(0) scale(1)'; this.style.boxShadow='0 12px 40px rgba(102, 126, 234, 0.4)'">
        <div style="background: rgba(255,255,255,0.25); padding: 1.5rem; border-radius: 16px; font-size: 2.5rem; box-shadow: 0 4px 16px rgba(0,0,0,0.2);">
            üí¨
        </div>
        <div style="flex: 1;">
            <div style="font-weight: 800; font-size: 1.8rem; margin-bottom: 0.5rem; text-shadow: 0 2px 8px rgba(0,0,0,0.2);">Messaging Hub</div>
            <div style="font-size: 1.1rem; opacity: 0.95; font-weight: 500;">Direct Messages ‚Ä¢ Community Chat ‚Ä¢ Course Discussions</div>
        </div>
        <div style="background: rgba(255,255,255,0.2); padding: 1rem; border-radius: 12px;">
            <i class="fas fa-arrow-right" style="font-size: 1.5rem;"></i>
        </div>
    </a>
    
    <!-- Main Dashboard Grid -->
    <div class="dashboard-grid">
        <!-- Unread Messages Alert -->
        <div id="unreadMessagesAlert" style="display: none; grid-column: 1 / -1; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 1.5rem 2rem; border-radius: 12px; margin-bottom: 1.5rem; box-shadow: 0 8px 30px rgba(102, 126, 234, 0.2); color: white;">
            <div style="display: flex; align-items: center; gap: 1rem;">
                <i class="fas fa-comment-dots" style="font-size: 1.5rem;"></i>
                <div style="flex: 1;">
                    <h4 style="margin: 0 0 0.5rem 0;">üí¨ New Messages in Your Courses</h4>
                    <p style="margin: 0; font-size: 0.9rem; opacity: 0.9;" id="unreadMessagesText">You have unread messages in your courses</p>
                </div>
                <a href="#" id="openForumBtn" style="padding: 0.75rem 1.5rem; background: white; color: #667eea; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; text-decoration: none; transition: all 0.3s;">
                    View Messages
                </a>
            </div>
        </div>

        <!-- My Enrollments Section -->
        <div class="card card-highlight">
            <div class="card-header">
                <h3 class="card-title">My Courses</h3>
                <a href="{{ url_for('student_browse_courses') }}" class="btn btn-primary btn-sm">
                    Browse Courses
                </a>
            </div>
            <div class="card-content">
                {% if enrollments %}
                    <div class="course-list">
                        {% for enrollment in enrollments %}
                            <div class="course-item {{ 'pending' if enrollment.status == 'pending' else 'active' }}">
                                <div class="course-badge">
                                    <span>{{ '‚ñ∂Ô∏è' if enrollment.status == 'approved' else '‚è≥' }}</span>
                                </div>
                                <div class="course-content">
                                    <div class="course-header">
                                        <h4>{{ enrollment.title }}</h4>
                                        <div class="course-meta">
                                            <span class="course-code">{{ enrollment.course_code }}</span>
                                            <span class="status-badge {{ enrollment.status }}">
                                                {% if enrollment.status == 'approved' %}
                                                    ‚úÖ Active
                                                {% elif enrollment.status == 'pending' %}
                                                    ‚è≥ Pending
                                                {% else %}
                                                    ‚ùå {{ enrollment.status.title() }}
                                                {% endif %}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="course-details">
                                        <p class="instructor">
                                            üë®‚Äçüè´ {{ enrollment.instructor_name }}
                                        </p>
                                        {% if enrollment.status == 'approved' %}
                                            <div class="learning-status">
                                                <div class="status-badge-container">
                                                    <div class="pulse-ring"></div>
                                                    <div class="pulse-ring delay-1"></div>
                                                    <div class="pulse-ring delay-2"></div>
                                                    
                                                </div>
                                                <div class="learning-bars">
                                                    <div class="bar"></div>
                                                    <div class="bar"></div>
                                                    <div class="bar"></div>
                                                    <div class="bar"></div>
                                                    <div class="bar"></div>
                                                </div>
                                            </div>
                                        {% endif %}
                                        <p class="enrolled-date">
                                            üìÖ Enrolled: {{ enrollment.enrolled_at[:10] if enrollment.enrolled_at else 'N/A' }}
                                        </p>
                                    </div>
                                    <div class="course-actions">
                                        {% if enrollment.status == 'approved' %}
                                            <a href="{{ url_for('student_course_view', course_id=enrollment.course_id) }}" class="btn btn-primary btn-sm">
                                        Start Learning
                                            </a>
                                            <a href="{{ url_for('course_discussion_forum', course_id=enrollment.course_id) }}" class="btn btn-success btn-sm">
                                                <i class="fas fa-comments"></i> Forum
                                            </a>
                                          
                                        {% elif enrollment.status == 'pending' %}
                                            <span class="pending-notice">
                                                ‚ÑπÔ∏è Awaiting instructor approval
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                {% else %}
                    <div class="empty-state">
                        <div class="empty-icon">
                            <span>üìö</span>
                        </div>
                        <h3>No Courses Yet</h3>
                        <p>Start your learning journey by enrolling in courses!</p>
                        <a href="{{ url_for('student_browse_courses') }}" class="btn btn-primary">
                            Explore Courses
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Discover Courses Section -->
        <div class="card discover-card">
            <div class="card-header">
                <h3 class="card-title">More Courses</h3>
                <div class="header-actions">
                    <a href="{{ url_for('student_browse_courses') }}" class="btn btn-secondary btn-sm">
                        View All
                    </a>
                </div>
            </div>
            <div class="card-content">
                {% if available_courses %}
                    <div class="discover-grid">
                        {% for course in available_courses[:6] %}
                            <div class="discover-item">
                                <div class="discover-icon">
                                    <span>üéì</span>
                                </div>
                                <div class="discover-content">
                                    <h4>{{ course.title }}</h4>
                                    <p class="discover-instructor">
                                        üë®‚Äçüè´ {{ course.instructor_name }}
                                    </p>
                                    <div class="discover-meta">
                                        <span class="discover-code">{{ course.course_code }}</span>
                                        {% if course.category %}
                                            <span class="discover-category">{{ course.category }}</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="discover-actions">
                                    <button type="button" 
                                            class="btn-enroll" 
                                            onclick="enrollInCourse('{{ course.course_code }}', '{{ course.title }}')"
                                            title="Enroll in {{ course.title }}">
                                        üöÄ
                                    </button>
                                    <button type="button" 
                                            class="btn-info"
                                            onclick="viewCourseDetails('{{ course.id }}')"
                                            title="View Details">
                                        ‚ÑπÔ∏è
                                    </button>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    
                    {% if available_courses|length > 6 %}
                        <div class="view-all-section">
                            <a href="{{ url_for('student_browse_courses') }}" class="btn btn-outline">
                                View All {{ available_courses|length }} Courses
                            </a>
                        </div>
                    {% endif %}
                {% else %}
                    <div class="empty-state">
                        <div class="empty-icon">
                            <span>üéì</span>
                        </div>
                        <h3>No Courses Available</h3>
                        <p>Check back later for more</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<style>
/* iOS Dark Theme Variables - Override base.html vars for this page */
:root {
    /* iOS Dark Theme Colors */
    --black: #000000;
    --white: #ffffff;
    --gray-100: #1c1c1e;
    --gray-200: #2c2c2e;
    --gray-300: #3a3a3c;
    --gray-400: #48484a;
    --gray-500: #636366;
    --gray-600: #8e8e93;
    
    /* iOS Vibrant Accent Colors */
    --primary: #0a84ff;
    --success: #30d158;
    --warning: #ff9f0a;
    --danger: #ff453a;
    --info: #64d2ff;
    --purple: #bf5af2;
    
    /* Text Colors */
    --text-primary: #ffffff;
    --text-secondary: #ebebf5;
    --text-light: #8e8e93;
    
    /* Background & Cards */
    --background: var(--black);
    --card-bg: #121212;
    --card-hover: #1c1c1e;
    --border: #2c2c2e;
    
    /* Shadows */
    --shadow: 0 2px 8px rgba(0, 0, 0, 0.6);
    --shadow-lg: 0 4px 16px rgba(0, 0, 0, 0.7);
    --shadow-xl: 0 8px 32px rgba(0, 0, 0, 0.8);
    
    /* Gradients */
    --gradient-primary: linear-gradient(135deg, #0a84ff 0%, #0066cc 100%);
    --gradient-success: linear-gradient(135deg, #30d158 0%, #28a745 100%);
    --gradient-warning: linear-gradient(135deg, #ff9f0a 0%, #ff8c00 100%);
    --gradient-info: linear-gradient(135deg, #64d2ff 0%, #0891b2 100%);
    
    /* Border Radius */
    --radius: 8px;
    --radius-lg: 12px;
    --radius-xl: 16px;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    background: var(--black);
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', system-ui, sans-serif;
    color: var(--text-primary);
    line-height: 1.6;
    min-height: 100vh;
}

/* Dashboard Layout */
.dashboard-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
    animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.dashboard-header {
    margin-bottom: 2.5rem;
    background: var(--card-bg);
    border-radius: var(--radius-xl);
    padding: 2.5rem;
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--border);
    position: relative;
    overflow: hidden;
}

.dashboard-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-primary);
    box-shadow: 0 0 10px var(--primary);
}

.welcome-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.welcome-content h1 {
    margin-bottom: 0.75rem;
    font-size: 2.5rem;
    font-weight: 800;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.025em;
}

.welcome-message {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    font-weight: 500;
}

.date-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--gray-100);
    color: var(--text-secondary);
    padding: 0.75rem 1.5rem;
    border-radius: 1rem;
    font-weight: 600;
    font-size: 0.95rem;
    border: 1px solid var(--border);
    backdrop-filter: blur(10px);
}

.user-avatar {
    display: flex;
    align-items: center;
}

.avatar-container {
    width: 90px;
    height: 90px;
    border-radius: 50%;
    background: var(--gradient-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    border: 4px solid var(--primary);
    box-shadow: var(--shadow-xl);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.avatar-container:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-2xl);
}

/* Stats Grid */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.75rem;
    margin-bottom: 3rem;
}

.stat-card {
    background: var(--card-bg);
    border-radius: 1.25rem;
    padding: 2rem;
    display: flex;
    align-items: center;
    gap: 1.25rem;
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.stat-card:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-8px);
    border-color: var(--gray-300);
}

.stat-card:hover::before {
    opacity: 1;
}

.stat-primary::before { background: var(--gradient-primary); }
.stat-success::before { background: var(--gradient-success); }
.stat-warning::before { background: var(--gradient-warning); }
.stat-info::before { background: var(--gradient-info); }

.stat-icon {
    width: 70px;
    height: 70px;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    flex-shrink: 0;
    transition: transform 0.3s ease;
}

.stat-card:hover .stat-icon {
    transform: scale(1.1);
}

.stat-primary .stat-icon { 
    background: rgba(10, 132, 255, 0.15);
    color: var(--primary);
    border: 1px solid rgba(10, 132, 255, 0.3);
}
.stat-success .stat-icon { 
    background: rgba(48, 209, 88, 0.15);
    color: var(--success);
    border: 1px solid rgba(48, 209, 88, 0.3);
}
.stat-warning .stat-icon { 
    background: rgba(255, 159, 10, 0.15);
    color: var(--warning);
    border: 1px solid rgba(255, 159, 10, 0.3);
}
.stat-info .stat-icon { 
    background: rgba(100, 210, 255, 0.15);
    color: var(--info);
    border: 1px solid rgba(100, 210, 255, 0.3);
}

.stat-content {
    flex: 1;
}

.stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 900;
    line-height: 1;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
    letter-spacing: -0.025em;
}

.stat-label {
    color: var(--text-secondary);
    font-weight: 600;
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

/* Dashboard Grid */
.dashboard-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2.5rem;
    align-items: start;
}

/* Cards */
.card {
    background: var(--card-bg);
    border-radius: 1.5rem;
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: fit-content;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
}

.card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.card:hover::before {
    opacity: 1;
}

.card:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-4px);
}

.card-highlight {
    border-left: 6px solid var(--primary);
}

.card-header {
    padding: 2rem;
    border-bottom: 1px solid var(--border);
    background: var(--gray-100);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
}

.card-title {
    margin: 0;
    font-size: 1.5rem;
    color: var(--text-primary);
    font-weight: 700;
    letter-spacing: -0.025em;
}

.header-actions {
    display: flex;
    gap: 0.75rem;
}

.card-content {
    padding: 2rem;
    flex: 1;
}

/* Course Items */
.course-list {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
}

.course-item {
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    gap: 1.25rem;
    align-items: flex-start;
    background: var(--card-bg);
    position: relative;
    overflow: hidden;
}

.course-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    transition: all 0.3s ease;
}

.course-item:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
    border-color: var(--gray-300);
}

.course-item.pending::before {
    background: var(--warning);
}

.course-item.active::before {
    background: var(--success);
}

.course-item.pending {
    background: var(--card-bg);
    border-color: var(--warning);
}

.course-item.active {
    background: var(--card-bg);
    border-color: var(--success);
}

.course-badge {
    width: 60px;
    height: 60px;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
    transition: all 0.3s ease;
}

.course-item:hover .course-badge {
    transform: scale(1.1);
}

.course-item.active .course-badge { 
    background: var(--gradient-success);
    animation: pulse 2s infinite;
}
.course-item.pending .course-badge { 
    background: var(--gradient-warning);
}

.course-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.course-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 0.75rem;
}

.course-header h4 {
    margin: 0;
    color: var(--text-primary);
    flex: 1;
    min-width: 250px;
    font-weight: 700;
    font-size: 1.2rem;
    line-height: 1.4;
}

.course-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
}

.course-code {
    background: var(--gray-200);
    padding: 0.5rem 1rem;
    border-radius: var(--radius);
    font-size: 0.85rem;
    color: var(--text-secondary);
    font-weight: 600;
    border: 1px solid var(--border);
    font-family: 'Monaco', 'Consolas', monospace;
}

.status-badge {
    padding: 0.5rem 1rem;
    border-radius: 1.25rem;
    font-size: 0.85rem;
    font-weight: 700;
    white-space: nowrap;
    border: 1px solid;
}

.status-badge.approved {
    background-color: #d1fae5;
    color: #065f46;
    border-color: #a7f3d0;
}

.status-badge.pending {
    background-color: #fef3c7;
    color: #92400e;
    border-color: #fde68a;
}

.course-details {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.instructor, .enrolled-date {
    margin: 0;
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    font-weight: 500;
}

/* Learning Status - iOS Dark Theme */
.learning-status {
    background: linear-gradient(135deg, rgba(48, 209, 88, 0.08) 0%, rgba(10, 132, 255, 0.08) 100%);
    padding: 1.5rem;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border);
    margin: 1rem 0;
    box-shadow: var(--shadow);
    position: relative;
    overflow: hidden;
}

.status-badge-container {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 1rem 0;
}

.pulse-ring {
    position: absolute;
    width: 80px;
    height: 80px;
    border: 2px solid var(--success);
    border-radius: 50%;
    animation: pulseRing 2s cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite;
    opacity: 0;
}

.pulse-ring.delay-1 {
    animation-delay: 0.5s;
}

.pulse-ring.delay-2 {
    animation-delay: 1s;
}

@keyframes pulseRing {
    0% {
        transform: scale(0.5);
        opacity: 1;
    }
    100% {
        transform: scale(1.3);
        opacity: 0;
    }
}

.status-badge {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: linear-gradient(135deg, var(--success) 0%, #28a745 100%);
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    box-shadow: 0 0 30px rgba(48, 209, 88, 0.6), 
                0 4px 12px rgba(48, 209, 88, 0.4);
    position: relative;
    z-index: 2;
    animation: statusFloat 3s ease-in-out infinite;
}

.badge-icon {
    font-size: 1.25rem;
    animation: rotateIcon 4s linear infinite;
}

.badge-text {
    font-size: 0.95rem;
    font-weight: 700;
    color: #000000;
    letter-spacing: 0.5px;
}

@keyframes statusFloat {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-5px);
    }
}

@keyframes rotateIcon {
    0%, 90% {
        transform: rotate(0deg);
    }
    95% {
        transform: rotate(-10deg);
    }
    100% {
        transform: rotate(0deg);
    }
}

.learning-bars {
    display: flex;
    gap: 8px;
    justify-content: center;
    align-items: flex-end;
    height: 40px;
    margin-top: 1rem;
}

.learning-bars .bar {
    width: 6px;
    background: linear-gradient(180deg, var(--primary) 0%, var(--success) 100%);
    border-radius: 3px;
    animation: barWave 1.2s ease-in-out infinite;
    box-shadow: 0 0 10px rgba(10, 132, 255, 0.5);
}

.learning-bars .bar:nth-child(1) {
    animation-delay: 0s;
}

.learning-bars .bar:nth-child(2) {
    animation-delay: 0.1s;
}

.learning-bars .bar:nth-child(3) {
    animation-delay: 0.2s;
}

.learning-bars .bar:nth-child(4) {
    animation-delay: 0.3s;
}

.learning-bars .bar:nth-child(5) {
    animation-delay: 0.4s;
}

@keyframes barWave {
    0%, 100% {
        height: 15px;
        opacity: 0.5;
    }
    50% {
        height: 35px;
        opacity: 1;
    }
}

.course-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
}

.pending-notice {
    color: var(--warning);
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    font-style: italic;
}

/* Discover Courses */
.discover-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.25rem;
}

.discover-item {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1.25rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.discover-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.discover-item:hover::before {
    opacity: 1;
}

.discover-item:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
    border-color: var(--gray-300);
}

.discover-icon {
    width: 50px;
    height: 50px;
    border-radius: 0.75rem;
    background: var(--gradient-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
    transition: transform 0.3s ease;
}

.discover-item:hover .discover-icon {
    transform: scale(1.1) rotate(5deg);
}

.discover-content {
    flex: 1;
    min-width: 0;
}

.discover-content h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-primary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.4;
}

.discover-instructor {
    margin: 0 0 0.75rem 0;
    font-size: 0.9rem;
    color: var(--text-light);
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-weight: 500;
}

.discover-meta {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    flex-wrap: wrap;
}

.discover-code {
    background: var(--gray-100);
    padding: 0.375rem 0.75rem;
    border-radius: 0.5rem;
    font-size: 0.8rem;
    color: var(--text-secondary);
    font-weight: 600;
    border: 1px solid var(--border);
    font-family: 'Monaco', 'Consolas', monospace;
}

.discover-category {
    background: var(--gray-200);
    padding: 0.375rem 0.75rem;
    border-radius: 0.5rem;
    font-size: 0.8rem;
    color: var(--text-secondary);
    font-weight: 600;
}

.discover-actions {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
}

.btn-enroll, .btn-info {
    width: 42px;
    height: 42px;
    border-radius: 0.75rem;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.btn-enroll::before, .btn-info::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.5s;
}

.btn-enroll:hover::before, .btn-info:hover::before {
    left: 100%;
}

.btn-enroll {
    background: var(--gradient-primary);
    color: white;
}

.btn-enroll:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 25px rgba(79, 70, 229, 0.4);
}

.btn-info {
    background: var(--gray-200);
    color: var(--text-primary);
}

.btn-info:hover {
    background: var(--gray-300);
    transform: scale(1.1);
}

.view-all-section {
    text-align: center;
    padding-top: 2rem;
    margin-top: 1.5rem;
    border-top: 1px solid var(--border);
}

/* Empty States */
.empty-state {
    text-align: center;
    padding: 3rem 2rem;
    color: var(--text-secondary);
}

.empty-icon {
    margin-bottom: 1.5rem;
    font-size: 3rem;
    opacity: 0.7;
}

.empty-state h3 {
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-weight: 700;
    font-size: 1.5rem;
}

.empty-state p {
    margin-bottom: 2rem;
    max-width: 300px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
    font-size: 1.05rem;
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    cursor: pointer;
    font-size: 0.95rem;
    white-space: nowrap;
    justify-content: center;
    position: relative;
    overflow: hidden;
}

.btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s;
}

.btn:hover::before {
    left: 100%;
}

.btn-sm {
    padding: 0.75rem 1.25rem;
    font-size: 0.9rem;
}

.btn-primary {
    background: var(--gradient-primary);
    color: white;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(79, 70, 229, 0.4);
}

.btn-secondary {
    background: var(--gray-600);
    color: white;
}

.btn-secondary:hover {
    background: var(--gray-700);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.btn-success {
    background: var(--gradient-success);
    color: white;
}

.btn-success:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
}

.btn-outline {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid var(--border);
}

.btn-outline:hover {
    background: var(--gray-50);
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
    border-color: var(--gray-300);
}

/* Animations */
@keyframes pulse {
    0% {
        transform: scale(0.95);
        box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7);
    }
    
    70% {
        transform: scale(1);
        box-shadow: 0 0 0 12px rgba(16, 185, 129, 0);
    }
    
    100% {
        transform: scale(0.95);
        box-shadow: 0 0 0 0 rgba(16, 185, 129, 0);
    }
}

@keyframes shine {
    0% {
        left: -100%;
    }
    100% {
        left: 100%;
    }
}

@keyframes progress-glow {
    0% {
        box-shadow: 0 0 5px rgba(16, 185, 129, 0.5);
    }
    50% {
        box-shadow: 0 0 20px rgba(16, 185, 129, 0.8);
    }
    100% {
        box-shadow: 0 0 5px rgba(16, 185, 129, 0.5);
    }
}

/* Modal Styling */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
}

.modal-content {
    background-color: var(--card-bg);
    margin: 10% auto;
    padding: 0;
    border-radius: var(--radius-xl);
    width: 90%;
    max-width: 500px;
    box-shadow: var(--shadow-xl);
    overflow: hidden;
    border: 1px solid var(--border);
    animation: modalSlideIn 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes modalSlideIn {
    from {
        opacity: 0;
        transform: translateY(-60px) scale(0.9);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.modal-header {
    padding: 2rem;
    border-bottom: 1px solid var(--border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--gradient-primary);
    color: var(--white);
}

.modal-header h3 {
