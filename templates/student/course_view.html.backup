<!-- Quick Action Bar -->
<div class="quick-bar-toggle" id="quickBarToggle" title="Quick Actions">
    <i class="fas fa-star"></i>
</div>

<div class="quick-bar" id="quickBar">
    <div class="quick-bar-item" onclick="showTab('content'); if(quickBar) quickBar.style.display='none';">
        <i class="fas fa-video quick-bar-icon"></i> Videos
    </div>
    <div class="quick-bar-item" onclick="showTab('quizzes'); if(quickBar) quickBar.style.display='none';">
        <i class="fas fa-book quick-bar-icon"></i> Quizzes
    </div>
    <div class="quick-bar-item" onclick="showTab('progress'); if(quickBar) quickBar.style.display='none';">
        <i class="fas fa-chart-bar quick-bar-icon"></i> Progress
    </div>
    <div class="quick-bar-item" onclick="showTab('discussions'); if(quickBar) quickBar.style.display='none';">
        <i class="fas fa-comments quick-bar-icon"></i> Discuss
    </div>
    <div class="quick-bar-item" onclick="smoothScrollTop()">
        <i class="fas fa-arrow-up quick-bar-icon"></i> Top
    </div>
</div>

<script>
    // Quick Bar Toggle
    const quickBarToggle = document.getElementById("quickBarToggle");
    const quickBar = document.getElementById("quickBar");

    if (quickBarToggle && quickBar) {
        quickBarToggle.addEventListener("click", function (e) {
            e.stopPropagation();
            quickBar.style.display =
                quickBar.style.display === "none" ? "flex" : "none";
        });

        document.addEventListener("click", function (e) {
            if (!quickBar.contains(e.target) && e.target !== quickBarToggle) {
                quickBar.style.display = "none";
            }
        });
    }

    // Smooth Scroll Function
    function smoothScroll(elementId) {
        const element = document.getElementById(elementId);
        if (element) {
            element.scrollIntoView({ behavior: "smooth", block: "start" });
            setTimeout(() => {
                if (quickBar) quickBar.style.display = "none";
            }, 300);
        }
    }

    // Smooth Scroll to Top
    function smoothScrollTop() {
        window.scrollTo({ top: 0, behavior: "smooth" });
        if (quickBar) quickBar.style.display = "none";
    }

    // Initialize Quick Bar Display
    if (quickBar) {
        quickBar.style.display = "none";
    }

</script>

